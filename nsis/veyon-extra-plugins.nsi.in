######################################################################

Section
SetOverwrite on
SetOutPath "$INSTDIR\plugins"
File "plugins/*.dll"
SectionEnd


######################################################################

Function .onInit
UserInfo::GetAccountType
pop $0
${If} $0 != "admin"
	MessageBox mb_iconstop "Please run the installer with administrative rights!"
	SetErrorLevel 740 ;ERROR_ELEVATION_REQUIRED
	Quit
${EndIf}
FunctionEnd

######################################################################

Section -Icons_Reg
SetOutPath "$INSTDIR"
WriteUninstaller "$INSTDIR\uninstall-extra-plugins.exe"

WriteRegStr ${REG_ROOT} "${UNINSTALL_PATH}"  "DisplayName" "${APP_NAME}"
WriteRegStr ${REG_ROOT} "${UNINSTALL_PATH}"  "UninstallString" "$INSTDIR\uninstall-extra-plugins.exe"
#WriteRegStr ${REG_ROOT} "${UNINSTALL_PATH}"  "DisplayIcon" "$INSTDIR\${MAIN_APP_EXE}"
WriteRegStr ${REG_ROOT} "${UNINSTALL_PATH}"  "DisplayVersion" "${VERSION}"
WriteRegStr ${REG_ROOT} "${UNINSTALL_PATH}"  "Publisher" "${COMP_NAME}"
WriteRegStr ${REG_ROOT} "${UNINSTALL_PATH}"  "URLInfoAbout" "${WEB_SITE}"
SectionEnd

######################################################################

Section Uninstall
${INSTALL_TYPE}

Delete "$INSTDIR\plugins\licensing.dll"
Delete "$INSTDIR\plugins\ldap-pro.dll"
Delete "$INSTDIR\plugins\network-discovery.dll"
Delete "$INSTDIR\uninstall-extra-plugins.exe"

DeleteRegKey ${REG_ROOT} "${UNINSTALL_PATH}"
SectionEnd

